$widgets = $('<%="#widget-#{@widget.id}"%>');
if(($widgets.find('.new-comment')).length>0){
	$widgets.find('.widget-addcomment').text('Comment');
	$widgets.find('.new-comment').remove();
	$container.masonry('reload');
}else{
	$widgets.find('.widget-addcomment').text('Hide');
	$widgets.find('.widget-footer:first').after('<%= escape_javascript(render "form")%>');
	$container.masonry('reload');
	$widgets.find('.new-comment textarea').focus();
}