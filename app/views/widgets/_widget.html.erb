<div class="widget" id='<%= "widget-#{widget.id}"%>'>
	<div class="group">
		<div class='control'>
			<%= link_to 'Comment', new_widget_comment_path(widget), class:'widget-addcomment', remote: true %>
			<%= link_to 'Like', '#', class:'widget-addlike'%>
		</div>
		<% if widget.content? %>
			<span class='widget-msg'><%= widget.content %></span>
		<%end%>
		<% if widget.photo? %>
			<%= link_to (image_tag widget.photo_url(:thumb).to_s, class:"widget-photo"), widget.photo_url.to_s, class:'fancybox' %>
		<%end%>
		<span class='widget-footer'>Guest posted this <%= time_ago_in_words widget.created_at %> ago. </span>
	</div>
	<% if widget.comments.exists? %>
		<%= render widget.comments.order('created_at desc') %>
	<%end%>
</div>