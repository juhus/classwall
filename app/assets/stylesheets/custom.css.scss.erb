body {
	background-image: url(<%= asset_path('wood_bg.jpg') %>);
	font-family: "Arial";
}

ul,ol{
	list-style:none;
}

textarea{
	resize:vertical;
	border:none;
	background:rgba(150,170,200,0.1);
}

.item{
	width: 290px;
  	margin: 5px;
  	float: left;
  	background:rgba(255,255,255,1);
    -webkit-box-shadow: 0 1px 8px rgba(0,0,0,0.4);
    box-shadow: 0 1px 8px rgba(0,0,0,0.5);
}

#wall-title{
	font-size:32px;
	font-weight:bold;
	width:100%;
	text-align:center;
	text-shadow: 0 1px 0 rgba(0,0,0,0.5);
	color:#fff;
}

#menu{
	position:fixed;
	top: 10px;
	left: 20px;
	z-index:99;
	& div { display: inline-block; width: 48px;}
	& img { display:block; margin: 0 auto;}
	& span { font: 11px Arial; display:block; text-align:center;}
}

.item-footer{
	display:block;
	padding:8px;
	background:rgba(252,252,252,1);
	color:#666;
	font-size:11px;
	text-shadow: 0 2px 0 rgba(255,255,255,1);
	border-top:1px solid rgba(230, 230, 230, 0.1);
	border-bottom:1px solid rgba(200, 200, 200, 0.1);
}

.item-body{
	display:block;
	padding:8px;
	color:#7c7c7c;
	font-size: 24px;
	text-shadow: 0 2px 0 rgba(255,255,255,1);
}
.item-photo{
	display:block;
}
.item-comments{
	display:block;
	font:18px Arial;
	padding:8px;
	color:#7c7c7c;
	text-shadow: 0 2px 0 rgba(255,255,255,1);
}
.item-addcomment{
	display:inline-block;
	float:right;
	font: 11px Arial;
	color:#7c7c7c;
	text-decoration:none;
}
.new-comment, .new-msg{
	padding:8px;
}
#container{
	margin-top:40px;
}

