body {
	background-image: url(<%= asset_path('wood_bg.jpg') %>);
	font-family: "Arial";
}

ul,ol{
	list-style:none;
}

textarea{
	resize:vertical;
	border:1px solid rgba(200,200,200,0.3);
	background:rgba(255,255,232,0.5);
	&:focus{  outline:none; box-shadow: 0 0 6px rgba(200,200,200,0.3) inset;}
	&[placeholder]{ font: 14px Helvetica;}
}

.item{
	width: 290px;
  	margin: 5px;
  	float: left;
  	background:rgba(255,255,255,1);
    -webkit-box-shadow: 0 1px 8px rgba(0,0,0,0.4);
    box-shadow: 0 1px 8px rgba(0,0,0,0.5);
    border-bottom:1px inset rgba(0, 0, 0, 0.1);
}

#wall-title{
	font-size:32px;
	font-weight:bold;
	width:100%;
	text-align:center;
	text-shadow: 0 1px 0 rgba(0,0,0,0.5);
	color:#fff;
}

#menu{
	position:absolute;
	top: 10px;
	left: 20px;
	z-index:99;
	& div { display: inline-block; width: 40px; cursor:pointer;}
	& img { display:block; margin: 0 auto; width:24px;}
	& span { font: 9px Arial; display:block; text-align:center; padding-top:3px; text-shadow:0 1px 0 rgba(255,255,255,0.5);}
}

.item-footer{
	display:block;
	padding:8px;
	background:rgba(255,255,255,1);
	color:#14A2F1;
	font-size:11px;
	text-shadow: 0 1px 0 rgba(255,255,255,0.75);
	border-bottom:1px solid rgba(200, 200, 200, 0.1);
}

.item-body{
	display:block;
	padding:8px;
	color:#5e5e5e;
	font-size: 24px;
	text-shadow: 0 2px 0 rgba(255,255,255,1);
}
.item-photo {
	display:block;
}
.item-comments{
	display:block;
	font:18px Arial;
	padding:8px;
	color:#5e5e5e;
	text-shadow: 0 2px 0 rgba(255,255,255,1);
}
.item-addcomment{
	display:inline-block;
	float:right;
	font: 11px Arial;
	color:#7c7c7c;
	text-decoration:none;
	padding-left: 8px;
	border-left: 1px solid rgba(200,200,200,0.5);
}
.new-comment, .new-msg{
	padding:8px;
	border-bottom:1px solid rgba(200, 200, 200, 0.1);
}
#container{
	margin-top:40px;
}

